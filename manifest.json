{

  "manifest_version": 2,
  "name": "Invisible Touch",
  "version": "1.0",

  "description": "Makes anything you click invisible.",

  "icons": {
    "48": "icons/learn-32x32.png"
  },

  "browser_action": {
    "default_icon": "icons/learn-32x32.png",
    "default_title": "Invisible Touch",
    "default_popup": "settings.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }

  ],

  "permissions": [
    "storage"
  ]

}
